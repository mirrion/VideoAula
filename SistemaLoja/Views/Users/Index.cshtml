@model IEnumerable<SistemaLoja.ViewModels.UserView>

@{
    ViewBag.Title = "Index";
}

<h2>Configurações de Permissões</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Nome)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>        
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>           
            <td>
                @Html.ActionLink("Permissões", "Roles", new { id = item.UserId }) |
            </td>
        </tr>
    }

</table>
